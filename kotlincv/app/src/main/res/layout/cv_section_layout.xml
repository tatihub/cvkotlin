<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/cv_section_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cvSectionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cv_section_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/cvSectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cv_section_title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cvSectionDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/cvSectionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvSectionTitle"
        app:layout_constraintLeft_toLeftOf="@id/cvSectionTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>